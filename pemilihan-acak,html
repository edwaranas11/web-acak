<body>
  <div class="container">
    <!-- PANEL KIRI -->
    <div class="left-panel">
      <h1>Pemilih Acak</h1>

      <div class="mode-select">
        <label><input type="radio" name="mode" value="range" checked /> Kisaran angka</label>
        <label><input type="radio" name="mode" value="list" /> Daftar</label>
      </div>

      <div class="form-section range-box">
        <label>Dari:</label>
        <input type="number" id="min" value="0" />
        <label>Sampai:</label>
        <input type="number" id="max" value="100" />
      </div>

      <div class="form-section list-box" style="display: none;">
        <label>Masukkan item (setiap baris baru):</label>
        <textarea id="listInput" placeholder="Contoh:
Apel
Pisang
Jeruk"></textarea>
      </div>

      <div class="delay-box">
        <label>Tampilkan hasil setelah</label>
        <input type="number" id="delay" value="3" /> detik
      </div>

      <button id="pickBtn">ðŸŽ² Pilih Secara Acak</button>
    </div>

    <!-- PANEL KANAN -->
    <div class="right-panel">
      <div class="label-result">HASIL</div>
      <div class="result" id="result">-</div>
    </div>
  </div>

  <script>
    const modeRadios = document.querySelectorAll('input[name="mode"]');
    const rangeBox = document.querySelector('.range-box');
    const listBox = document.querySelector('.list-box');
    const pickBtn = document.getElementById('pickBtn');
    const result = document.getElementById('result');
    let shuffleInterval;

    // Ganti mode input
    modeRadios.forEach((radio) => {
      radio.addEventListener('change', () => {
        if (radio.value === 'range') {
          rangeBox.style.display = 'block';
          listBox.style.display = 'none';
        } else {
          rangeBox.style.display = 'none';
          listBox.style.display = 'block';
        }
      });
    });

    // Efek animasi hasil
    function animateResult() {
      result.classList.add('animate');
      setTimeout(() => result.classList.remove('animate'), 200);
    }

    // Logika tombol acak
    pickBtn.addEventListener('click', () => {
      const delay = parseInt(document.getElementById('delay').value) * 1000;
      const mode = document.querySelector('input[name="mode"]:checked').value;

      let listItems = [];
      if (mode === 'list') {
        listItems = document
          .getElementById('listInput')
          .value.split('\n')
          .map((x) => x.trim())
          .filter((x) => x);
        if (listItems.length === 0) {
          result.textContent = 'Masukkan daftar!';
          return;
        }
      }

      clearInterval(shuffleInterval);
      shuffleInterval = setInterval(() => {
        let randomTemp;
        if (mode === 'range') {
          const min = parseInt(document.getElementById('min').value);
          const max = parseInt(document.getElementById('max').value);
          randomTemp = Math.floor(Math.random() * (max - min + 1)) + min;
        } else {
          randomTemp = listItems[Math.floor(Math.random() * listItems.length)];
        }
        result.textContent = randomTemp;
        animateResult();
      }, 100);

      setTimeout(() => {
        clearInterval(shuffleInterval);
        let finalValue;
        if (mode === 'range') {
          const min = parseInt(document.getElementById('min').value);
          const max = parseInt(document.getElementById('max').value);
          finalValue = Math.floor(Math.random() * (max - min + 1)) + min;
        } else {
          finalValue = listItems[Math.floor(Math.random() * listItems.length)];
        }
        result.textContent = finalValue;
        animateResult();
      }, delay);
    });
  </script>
</body>
